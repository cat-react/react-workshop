      section
        h3 Props
        code.language-javascript.
          &ltCompany name="Catalysts"/>
        br
        pre
          code.language-javascript.
            class Company extends React.Component {
              render() {
                return (
                  &ltdiv>company: {this.props.name}&lt/div>
